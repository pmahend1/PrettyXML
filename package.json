{
    "name": "prettyxml",
    "displayName": "Pretty XML",
    "author": {
        "name": "Prateek Mahendrakar"
    },
    "readme": "https://github.com/pmahend1/PrettyXML/blob/master/README.md",
    "description": "XML formatter extension for Visual Studio Code.Formats XML documents just like Visual Studio.",
    "version": "0.0.7",
    "publisher": "PrateekMahendrakar",
    "repository": {
        "url": "https://github.com/pmahend1/prettyxml.git"
    },
    "icon": "images/logo.png",
    "license": "MIT",
    "bugs": "https://github.com/pmahend1/prettyxml/issues",
    "preview": true,
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:prettyxml.prettifyxml",
        "onLanguage:xml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
            "command": "prettyxml.prettifyxml",
            "title": "Prettify XML"
        }],
        "keybindings": [{
            "command": "prettyxml.prettifyxml",
            "key": "ctrl+p f"
        }],
        "languages": [{
            "id": "xml",
            "extensions": [
                ".config",
                ".csproj",
                ".xml",
                ".xsd",
                ".xsl",
                ".plist",
                ".mobileconfig",
                ".xaml",
                ".axml",
                ".resx"
            ]
        }],
        "menus": {
            "editor/context": [{
                "command": "prettyxml.prettifyxml",
                "group": "1_modification@100",
                "when": "editorLangId == 'xml'"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.47.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "electron-edge-js": "^12.14.2"
    }
}