{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "esbuild-watch",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"label": "npm: esbuild-watch",
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "esbuild",
			"group": "build",
			"problemMatcher": "$esbuild",
			"label": "npm: esbuild",
		}
	]
}
